{
  "openapi": "3.0.0",
  "info": {
    "title": "Book Store API",
    "version": "1.0.0",
    "description": "Book API Routes"
  },
  "servers": [{ "url": "http://localhost:9090" }],
  "tags": [
    {
      "name": "auth",
      "description": "Authentication and Authorization"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "User Signup",
        "description": "Create a new use account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Ritesh Raj"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "riteshraj@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new User"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "User Login",
        "description": "Logs in a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "riteshraj@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "User not found"
          },
          "401": {
            "description": "Invalid credentials"
          },
          "200": {
            "description": "User logged in successfully"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
